<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen_chat_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:gravity="center_vertical"
    android:background="@drawable/chat_viewstub_bg"
    android:visibility="gone">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
        android:id="@+id/phone_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:onClick="onfunctionClick"
        android:src="@drawable/phone_pick_up_48"/>
        
        <ImageView 
        android:id="@+id/video_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:onClick="onfunctionClick"
        android:src="@drawable/webcam_24"/>
        <ImageView 
        android:id="@+id/file_transfer_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:onClick="onfunctionClick"
        android:src="@drawable/folder_24"/>
        <!--  密业务键
        <ImageView 
        android:id="@+id/encrypt_phone_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:onClick="onfunctionClick"
        android:src="@drawable/voice_call_48"/>
        -->
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
    <TextView 
        android:id="@+id/hidden_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <EditText
        android:id="@+id/edit_msg" 
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"/>
    <ImageView 
        android:id="@+id/tmp_mobile_msg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:onClick="onfunctionClick"
        android:src="@drawable/about_48"/>
    <Button 
        android:id="@+id/msg_send_bt"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:onClick="onfunctionClick"
        android:text="@string/send"/>
    </LinearLayout>
    

</LinearLayout>