<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_mainbg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/screen_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_titleblack" >

        <ImageView
            android:id="@+id/screen_mysubscribegroup_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/jiantou"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/screen_mysubscribegroup_back"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/string_mysubscribegroup"
            android:textColor="@color/color_mainbg"
            android:textSize="22dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/screen_mysubscribe_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/color_mainbg"
        android:dividerHeight="0dp"
          android:scrollbars="none" 
       >
    </ListView>

</LinearLayout>