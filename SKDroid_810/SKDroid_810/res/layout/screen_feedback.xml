<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_greybg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/screen_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_titleblack" >

        <ImageView
            android:id="@+id/screen_feedback_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:src="@drawable/jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/screen_feedback_back"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/feedback_but"
            android:textColor="@color/color_mainbg"
            android:textSize="22dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/feedback_body_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screen_top"
        android:layout_marginTop="5dp"
        android:padding="8dp"
        android:text="@string/feedback_body_text"
        android:textColor="@color/color_darktext"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/feedback_body"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/feedback_body_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/color_mainbg"
        android:hint="@string/feedback_text"
        android:paddingLeft="16dp"
        android:textColor="@color/color_text1"
        android:textSize="20dp" />

    <Button
        android:id="@+id/feedback_commit"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/feedback_body"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sel_textbutton_normal"
        android:text="@string/feedback_commit"
        android:textColor="@color/color_mainbg"
        android:textSize="22dp" />

</RelativeLayout>