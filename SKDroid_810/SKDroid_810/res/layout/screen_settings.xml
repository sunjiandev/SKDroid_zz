<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_mainbg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/screen_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/app_title_bg" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:src="@drawable/jiantou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/back"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/string_setting"
            android:textColor="@color/color_mainbg"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@color/color_greybg" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_greybg" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <TextView
                android:id="@+id/screen_settings_textView_general_setting"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/color_mainbg"
                android:padding="10dp"
                android:text="@string/general_49"
                android:textColor="@color/color_titleblack"
                android:textSize="18sp" >
            </TextView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_text" />

            <TextView
                android:id="@+id/screen_setting_textView_about"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/color_mainbg"
                android:padding="10dp"
                android:text="@string/string_about"
                android:textColor="@color/color_titleblack"
                android:textSize="18sp" >
            </TextView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_text" />

            <TextView
                android:id="@+id/screen_more_textView_update"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/color_mainbg"
                android:padding="10dp"
                android:text="@string/string_update"
                android:textColor="@color/color_titleblack"
                android:textSize="18sp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/screen_setting_feedback_but"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/color_mainbg"
                android:padding="10dp"
                android:text="@string/feedback_but"
                android:textColor="@color/color_titleblack"
                android:textSize="18sp"
                android:visibility="gone" >
            </TextView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/screen_setting_change_identity"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/color_mainbg"
                android:padding="10dp"
                android:text="@string/change_identity"
                android:textColor="@color/color_titleblack"
                android:textSize="18sp" >
            </TextView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/color_greybg" />

            <TextView
                android:id="@+id/screen_setting_textView_exit"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/color_mainbg"
                android:padding="10dp"
                android:text="@string/string_exit"
                android:textColor="@color/color_titleblack"
                android:textSize="18sp" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/screen_settings_textView_general_48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/general_48"
                    android:textSize="20dp" >
                </TextView>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_mainbg"
                    android:src="@drawable/n_forward" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/screen_settings_textView_network_48"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/network_48"
                    android:textSize="20dp" >
                </TextView>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_mainbg"
                    android:src="@drawable/n_forward" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/screen_settings_textView_lock_48"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/lock_48"
                    android:textSize="20dp" >
                </TextView>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_mainbg"
                    android:src="@drawable/n_forward" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/color_mainbg"
                android:padding="10dp"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/screen_settings_textView_codecs_48"
                   android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/color_mainbg"
                    android:padding="10dp"
                    android:text="@string/codecs_48"
                    android:textColor="@color/color_titleblack"
                    android:textSize="18dp" >
                </TextView>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_mainbg"
                    android:padding="10dp"
                    android:src="@drawable/n_forward" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/screen_settings_textView_qos_qoe_48"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/color_mainbg"
                    android:padding="20dp"
                    android:text="@string/qos_qoe_48"
                    android:textColor="@color/color_titleblack"
                    android:textSize="20dp" >
                </TextView>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_mainbg"
                    android:padding="16dp"
                    android:src="@drawable/n_forward"
                    android:textColor="@color/color_titleblack" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/screen_settings_textView_natt_48"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/natt_48"
                    android:textSize="20dp" >
                </TextView>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_mainbg"
                    android:src="@drawable/n_forward" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>