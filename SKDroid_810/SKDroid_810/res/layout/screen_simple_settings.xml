<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_mainbg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/screen_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            android:background="@color/color_mainbg"
            android:padding="5dp"
            android:src="@drawable/button_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/string_setting"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1" />

            <TextView
                android:id="@+id/screen_qos_textView_vsize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/screen_qos_textView_media"
                android:layout_marginLeft="10px"
                android:paddingTop="5px"
                android:text="@string/video_fenbianlv"
                android:textSize="16dp" >
            </TextView>

            <Spinner
                android:id="@+id/screen_qos_Spinner_vsize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/screen_qos_textView_vsize"
                android:layout_marginLeft="10px"
                android:layout_marginRight="5px" >
            </Spinner>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1" />

            <CheckBox
                android:id="@+id/screen_general_checkBox_NR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/screen_general_checkBox_VAD"
                android:text="@string/voice_down"
                android:visibility="gone" >
            </CheckBox>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/screen_general_checkBox_autoStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/screen_general_checkBox_NR"
                android:text="@string/auto_run" >
            </CheckBox>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1" />

            <CheckBox
                android:id="@+id/screen_general_checkBox_fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/screen_general_checkBox_interceptCall"
                android:text="@string/video_full" >
            </CheckBox>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/screen_general_checkBox_ffc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/screen_general_checkBox_fullscreen"
                android:text="@string/open_precamera"
                android:visibility="gone" >
            </CheckBox>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1" />

            <CheckBox
                android:id="@+id/screen_natt_checkBox_ice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_ice"
                android:visibility="gone" >
            </CheckBox>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/screen_natt_checkBox_hack_aor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/screen_natt_checkBox_ice"
                android:text="Hack the AoR"
                android:visibility="gone" >
            </CheckBox>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line1"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>