<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_mainbg" >

    <RelativeLayout
        android:id="@+id/screen_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/app_title_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text="@string/app_name"
            android:textColor="@color/color_mainbg"
            android:textSize="22dp" />

        <ImageButton
            android:id="@+id/screen_tab_call_search_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="#00000000"
            android:paddingLeft="30dp"
            android:src="@drawable/title_search"
            android:visibility="visible" />
    </RelativeLayout>

    <com.sunkaisens.skdroid.component.ClearEditText
        android:id="@+id/screen_tab_dialer_editText_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_border_keyinput"
        android:gravity="center"
        android:inputType="phone"
        android:padding="5dp"
        android:textColor="@color/color_white"
        android:textSize="30sp"
        android:visibility="gone" />

    <View
        android:id="@+id/dividing_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/screen_top"
        android:background="@color/color_text"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/keybutton"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/sel_button_callkey"
        android:button="@null" />

    <ListView
        android:id="@+id/calllist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/keybutton"
        android:layout_below="@id/dividing_line"
        android:clickable="true"
        android:divider="@color/color_mainbg"
        android:dividerHeight="0dp"
        android:focusable="true"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/keylayoutmain"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/color_mainbg"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/screen_tab_dialer_linearLayout_keyboard"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="2"
            android:background="@color/color_mainbg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="10" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_7"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_8"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_9"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_star"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_0"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_sharp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:padding="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10" >

                <include
                    android:id="@+id/screen_tab_dialer_button_hide"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_image"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_video"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    layout="@layout/view_dialer_button_image2"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_audio"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    layout="@layout/view_dialer_button_image2"
                    android:padding="0dp" />

                <include
                    android:id="@+id/screen_tab_dialer_button_del"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_image"
                    android:padding="0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/tabhost_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_text"
        android:visibility="visible" />

</RelativeLayout>