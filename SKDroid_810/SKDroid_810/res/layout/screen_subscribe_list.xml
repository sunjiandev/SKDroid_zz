<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/screen_subscribe_list_linearLayout_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_titleblack"
        android:padding="3dp"
        android:weightSum="8" >

        <ImageView
            android:id="@+id/screen_subscribe_list_linearLayout_top_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:src="@drawable/jiantou" />

        <TextView
            android:id="@+id/screen_subscribe_list_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/screen_subscribe_list_linearLayout_top_back"
            android:layout_weight="2.20"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/string_Contact_allContactSubscribe_message"
            android:textColor="@color/color_white"
            android:textSize="20sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/color_childbg1" />

    <ListView
        android:id="@+id/screen_subscribe_list_listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_mainbg"
        android:divider="@color/color_greybg"
        android:dividerHeight="0dp"
        android:focusable="true"
        android:gravity="center"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>