<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_mainbg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/screen_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_mainbg"
        android:padding="3dp"
        android:weightSum="8" >

        <TextView
            android:id="@+id/view_call_incall_audio_textView_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5px"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="In Call"
            android:textSize="16sp"
            android:textStyle="bold" >
        </TextView>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/screen_top"
        android:background="@color/color_childbg1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/color_mainbg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/view_call_incall_audio_textView_remote"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view_call_incall_audio_relativeLayout_avatar"
            android:layout_alignRight="@+id/view_call_incall_audio_relativeLayout_avatar"
            android:layout_below="@+id/view_call_incall_audio_relativeLayout_avatar"
            android:layout_marginBottom="5px"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:layout_marginTop="10px"
            android:gravity="center_horizontal"
            android:text="John Doe"
            android:textSize="25sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/view_call_incall_audio_textView_duration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_call_incall_audio_imageView_avatar"
            android:gravity="center"
            android:text="12:00"
            android:textSize="12sp"
            android:textStyle="bold" >
        </TextView>

        <ImageView
            android:id="@+id/audio_speaker"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/btn_mianti" />
    </LinearLayout>

    <TextView
        android:id="@+id/view_space"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="" >
    </TextView>

    <Button
        android:id="@+id/view_call_incall_audio_imageButton_hang"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@id/view_space"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/sel_textbutton_red"
        android:padding="5dp"
        android:text="@string/finish"
        android:textColor="@color/color_text2"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>